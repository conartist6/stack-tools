{
  "name": "stack-tools",
  "version": "0.1.0",
  "description": "Utilites for printing and parsing errors and their stacks",
  "license": "MIT",
  "repository": "stack-tools-js/stack-tools",
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "author": {
    "name": "Conrad Buck",
    "email": "conartist6@gmail.com",
    "url": "https://github.com/conartist6"
  },
  "scripts": {
    "clean": "run-p clean:*",
    "clean:js": "rimraf lib",
    "build": "run-s clean build:nearley build:js",
    "build:js": "rimraf lib && babel -d lib src && copyfiles -u 1 'src/**/*.d.ts' lib",
    "build:nearley": "cd src/v8/internal/nearley && nearleyc error.ne -o error.js && nearleyc frame.ne -o frame.js && nearleyc frame-strict.ne -o frame-strict.js",
    "test": "run-s test:types test:js",
    "test:js": "ava",
    "test:types": "tsc",
    "prepare": "husky install",
    "verify": "run-s build:js test"
  },
  "lint-staged": {
    "*.js": [
      "eslint --quiet"
    ],
    "*.{js,md,json}": [
      "prettier -c"
    ]
  },
  "dependencies": {
    "iserror": "0.0.2",
    "moo": "^0.5.1",
    "nearley": "^2.20.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "ava": "^3.15.0",
    "common-tags": "^1.8.0",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.0.9",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "typescript": "^4.4.4"
  }
}
